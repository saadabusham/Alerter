<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="textview_smallsize" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/en_normal_regular</item>
        <item name="android:gravity">center|start</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Dialog Animation Style -->
    <style name="DialogAnimationsBottomToTop">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

    <style name="DialogAnimationsTopToBottom">
        <item name="android:windowEnterAnimation">@anim/slide_down_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_up_animation</item>
    </style>

</resources>